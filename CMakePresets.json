{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
			}
		},
		{
			"name": "linux-base",
			"hidden": true,
			"inherits": "base",
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "x64-linux"
			}
		},
		{
			"name": "windows-base", 
			"hidden": true,
			"inherits": "base",
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "x64-windows",
				"CMAKE_CXX_COMPILER": "clang-cl",
				"CMAKE_C_COMPILER": "clang-cl"
			}
		},
		{
			"name": "linux-debug",
			"displayName": "Linux Debug配置",
			"inherits": "linux-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "linux-release",
			"displayName": "Linux Release配置",
			"inherits": "linux-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native -DNDEBUG",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
			}
		},
		{
			"name": "win-debug",
			"displayName": "Windows Debug配置",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "win-release",
			"displayName": "Windows Release配置", 
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}